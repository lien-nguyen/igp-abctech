pipeline
{
    agent any 
    tools {
        maven 'Maven-3.9.10'
    }
    stages 
    {
        stage('Code Checkout') 
        {
            steps 
            {
                echo 'Checking out code...'
                git branch: 'main', url: 'https://github.com/lien-nguyen/igp-abctech.git'
            }
        }
        stage('Code Compile') 
        {
            steps 
            {
                echo 'Compiling...'
                sh 'mvn compile'
            }
        }
        stage('Unit Test') 
        {
            steps 
            {
                echo 'Testing...'
                sh 'mvn test'
            }
        }
        stage('Code Packaging') 
        {
            steps 
            {
                echo 'Packaging...'
                sh 'mvn package'
            }
        }
    }
}